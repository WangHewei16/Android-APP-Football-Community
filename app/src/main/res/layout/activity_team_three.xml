<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5F7FC"
    tools:context=".Team.TeamThreeActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="237dp"
        android:layout_height="256dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/teamthreeicon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="269dp"
        android:layout_height="27dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="32dp"
        android:text="Team Name:   Beijing Spur"
        android:textStyle="bold"
        android:textColor="#0A9DCE"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="345dp"
        android:layout_height="35dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="Activity Location:   GongTi Stadium"
        android:textStyle="bold"
        android:textColor="#0A9DCE"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/button"
        android:layout_width="146dp"
        android:layout_height="60dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="148dp"
        android:backgroundTint="#0A9DCE"
        android:text="Apply"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="333dp"
        android:layout_height="32dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="5dp"
        android:text="Introduction and Target:"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="346dp"
        android:layout_height="158dp"
        android:layout_marginTop="3dp"
        android:text="We are a team for all football fans. We have no competition task at present. The purpose is to strengthen our body and enrich our life."
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />
</androidx.constraintlayout.widget.ConstraintLayout>